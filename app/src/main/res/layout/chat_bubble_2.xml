<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id_chat_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/id_chat_card_container_sec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="6dp"
        android:background="#091B97"
        android:clickable="true"
        android:elevation="0dp"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:minHeight="48dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/id_chat_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:minWidth="35dp"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/id_user_name"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginTop="8dp"
                android:text="Sthembiso Musana"
                android:textColor="#1F054E"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/id_message_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#586D8E"
                android:text="Hello world"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/id_chat_container_time"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:paddingTop="2dp"
                android:paddingEnd="4dp"
                android:text="10:10"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>